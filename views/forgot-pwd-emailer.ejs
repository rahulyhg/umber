        }

        table.order-product th:last-child {
            padding-right: 20px;
        }

        table.order-product tr>td {
            padding: 10px;
        }

        table.order-product>tr>th>address {
            line-height: 1.3;
            font-style: normal;
            font-weight: normal;
            font-size: 12px;
        }
        /*End of emailer design*/
    </style>
</head>

