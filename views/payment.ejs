    <input type="hidden" value="<%= currency %>" name="currency" />
    <input type="hidden" value="<%= amount %>" name="amount" />
    <input type="hidden" value="<%= redirect_url %>" name="redirect_url" />
    <input type="hidden" value="<%= cancel_url %>" name="cancel_url" />
    <input type="hidden" value="<%= language %>" name="language" />

